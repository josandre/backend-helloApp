{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types",
      "./src/@types",
      "global.d.ts"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "lib": ["es2021"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
